{
  "name": "local-testing-tutorial",
  "version": "1.0.0",
  "license": "MIT",
  "main": "index.js",
  "scripts": {
    "build": "yarn hardhat compile && cd ./syncswap-contracts && yarn build-zk && cd ..",
    "deploy-arbitrum-goerli": "yarn hardhat run --network arbitrumGoerli deploy/deployArbitrumGoerli.ts",
    "deploy-local": "NODE_ENV=test yarn hardhat deploy-zksync --script deployLocal.ts",
    "deploy-local-hardhat": "yarn hardhat run --network localhost deploy/deployLocalHardhat.ts",
    "format": "prettier --write --plugin=prettier-plugin-pkg --plugin=prettier-plugin-solidity .",
    "lint": "yarn hardhat compile --force && yarn solhint && yarn slither",
    "slither": "slither --ignore-compile .",
    "solhint": "solhint 'contracts/**/*.sol' --max-warnings 0",
    "test": "NODE_ENV=test hardhat test"
  },
  "dependencies": {
    "@nomiclabs/hardhat-ethers": "^2.2.3",
    "@nomiclabs/hardhat-waffle": "^2.0.6",
    "@openzeppelin/contracts": "^4.8.3",
    "@typechain/ethers-v6": "^0.4.0",
    "@typechain/hardhat": "^8.0.0",
    "@uniswap/v3-core": "^1.0.1",
    "@uniswap/v3-periphery": "^1.4.3",
    "hardhat-abi-exporter": "^2.10.1",
    "hardhat-deploy": "^0.11.30",
    "hardhat-gas-reporter": "^1.0.9",
    "typechain": "^8.2.0"
  },
  "devDependencies": {
    "@matterlabs/hardhat-zksync-deploy": "^0.6.0",
    "@matterlabs/hardhat-zksync-solc": "^0.3.12",
    "@matterlabs/zksync-contracts": "^0.6.1",
    "@types/chai": "^4.3.0",
    "@types/mocha": "^9.1.0",
    "chai": "^4.3.6",
    "ethers": "^5.5.4",
    "hardhat": "^2.8.4",
    "mocha": "^10.0.0",
    "prettier": "^3.0.0",
    "prettier-plugin-pkg": "^0.18.0",
    "prettier-plugin-solidity": "^1.1.3",
    "solhint": "^3.4.1",
    "solhint-plugin-prettier": "^0.0.5",
    "ts-node": "^10.5.0",
    "typescript": "^4.5.5",
    "zksync-web3": "^0.13.4"
  }
}
